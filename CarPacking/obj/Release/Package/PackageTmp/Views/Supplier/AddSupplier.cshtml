@model CarPacking.Models.Supplier

@{
    ViewBag.Title = "Add Supplier";
}

<h2 class="text-center mt-4">Add Supplier</h2>

<div class="container mt-5 supplier-form-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter supplier name", title = "Supplier Name" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter supplier email", title = "Supplier Email" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter supplier email", title = "Supplier Email" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Address)
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Enter supplier address", title = "Supplier Address" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber)
            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter supplier phone number", title = "Supplier Phone Number" })
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Add Supplier</button>
        </div>
    }
</div>

<!-- Custom Styles -->
<style>
    .supplier-form-container {
        border: 1px solid #007bff; /* Outline border color */
        padding: 20px;
        border-radius: 8px;
        position: relative;
        background-color: #f9f9f9; /* Slight background color for better contrast */
    }

        .supplier-form-container:before {
            content: "";
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            border: 2px solid #007bff; /* Outline border */
            border-radius: 10px; /* Rounded corners for the outline */
            pointer-events: none;
        }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        padding: 10px;
        font-size: 1rem;
        border-radius: 5px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.25);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        padding: 10px 20px;
        font-size: 1.25rem;
        border-radius: 5px;
        transition: background-color 0.3s ease, border-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }
</style>

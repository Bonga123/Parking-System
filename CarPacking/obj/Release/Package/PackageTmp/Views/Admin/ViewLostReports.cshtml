@model IEnumerable<CarPacking.Models.LostPermitReport>

@{
    ViewBag.Title = "Lost Permit Reports";
}
<style>
    /* Custom styles for the Lost Permit Reports page */
    .lost-permit-container {
        margin-top: 50px;
        display: flex;
        justify-content: center;
    }

    .lost-permit-card {
        width: 100%;
        max-width: 1000px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
    }

        .lost-permit-card h2 {
            color: #007bff;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .table-striped {
        width: 100%;
        border-collapse: collapse;
    }

        .table-striped thead {
            background-color: #007bff;
            color: white;
        }

        .table-striped th,
        .table-striped td {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
            text-align: center;
        }

        .table-striped tbody tr:hover {
            background-color: #f1f1f1;
        }

        .table-striped .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            padding: 5px 15px;
            transition: background-color 0.3s ease;
        }

            .table-striped .btn-primary:hover {
                background-color: #0056b3;
            }

    .table-responsive {
        overflow-x: auto;
    }

</style>


<div class="lost-permit-container">
    <div class="lost-permit-card">
        <h2>Lost Permit Reports</h2>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Report ID</th>
                        <th>Permit ID</th>
                        <th>Student ID</th>
                        <th>Reported Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.LostPermitReportId</td>
                            <td>@report.ParkingPermitId</td>
                            <td>@report.email</td>
                            <td>@report.ReportedDate.ToString("g")</td>
                            <td>
                                @using (Html.BeginForm("ReassignPermit", "Admin", FormMethod.Post))
                                {
                                    @Html.Hidden("reportId", report.LostPermitReportId)
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-arrow-repeat"></i> Reassign Permit
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- File: Views/ParkingPermit/IssuePermit.cshtml -->
@model CarPacking.Models.ParkingPermit

@{
    ViewBag.Title = "Issue Parking Permit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .permit-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f0f4f7;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease-in-out;
    }

        .permit-container:hover {
            transform: scale(1.02);
        }

    h2 {
        text-align: center;
        color: #343a40;
    }

    label {
        font-weight: bold;
        color: #495057;
    }

    select, input[type="text"] {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ced4da;
        border-radius: 4px;
        transition: border-color 0.3s ease-in-out;
    }

        select:focus, input[type="text"]:focus {
            border-color: #28a745;
            outline: none;
        }

    button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
    }

        button:hover {
            background-color: #218838;
        }
</style>

<div class="permit-container">
    <h2>Issue Parking Permit</h2>

    @using (Html.BeginForm())
    {
        <div>
            <label>Permit Type:</label>
            @Html.DropDownListFor(m => m.PermitType, new SelectList(new[] { "Regular", "Wheelchair", "VIP" }))
        </div>
        <div>
            <label>Price (in Rands):</label>
            @Html.TextBoxFor(m => m.Price)
        </div>
        <button type="submit">Issue Permit</button>
    }
</div>

    <style>
        #toggle {
            color: red; /* This changes the color of the text or the icon inside the toggle link */
        }

            #toggle span {
                display: block;
                width: 30px; /* Adjust the width as needed */
                height: 3px; /* Adjust the height as needed */
                background-color: red; /* This makes the span element (toggle icon) red */
                margin: 5px 0; /* Adds space between bars if there are multiple spans */
                transition: background-color 0.3s ease; /* Smooth color transition */
            }

            /* Optional: If you want to change the background color on hover */
            #toggle:hover span {
                background-color: darkred;
            }

        .breadcrumb-container {
            background-image: url('/assets/images/2.jpg');
            background-size: cover;
            background-position: center;
            padding: 60px 60px; /* Padding to adjust height */
            border-radius: 5px;
            margin-bottom: 20px;
            display: flex; /* Align items in a row */
            align-items: center; /* Vertically center the breadcrumb content */
        }

        .breadcrumb {
            margin: 0; /* Remove default margin */
            padding: 0;
            display: flex; /* Ensure breadcrumb items are aligned in a row */
            align-items: center;
        }

            .breadcrumb a {
                color: #fff;
                text-decoration: none;
                font-size: 1.1rem;
                font-weight: bold;
                background-color: rgba(0, 0, 0, 0.5);
                padding: 5px 10px;
                border-radius: 3px;
                margin-right: 10px; /* Space between breadcrumb items */
            }

        .breadcrumb-item.active {
            color: #ddd;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px 10px;
            border-radius: 3px;
        }

        .breadcrumb-item + .breadcrumb-item::before {
            content: '>'; /* Add separator between breadcrumb items */
            margin-right: 10px;
            color: #fff;
            font-weight: normal;
            background: none;
            padding: 0;
        }
    </style>


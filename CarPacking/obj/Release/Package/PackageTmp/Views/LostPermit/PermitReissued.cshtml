@model CarPacking.Models.ParkingPermit

@{
    ViewBag.Title = "Parking Permit Reissued";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .reissue-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff3cd;
        border-radius: 8px;
        border: 1px solid #ffeeba;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .reissue-container h2 {
            color: #856404;
        }

        .reissue-container ul {
            list-style-type: none;
            padding: 0;
        }

        .reissue-container li {
            font-size: 18px;
            color: #856404;
            margin: 10px 0;
        }

        .reissue-container img {
            margin-top: 20px;
            max-width: 200px;
        }

        .reissue-container p {
            font-size: 18px;
            color: #856404;
            margin: 20px 0;
        }
</style>

<div class="reissue-container">
    <h2>Parking Permit Reissued</h2>

    <p>Your parking permit has been reissued. Details:</p>
    <ul>
        <li>Permit Type: @Model.PermitType</li>
        <li>Price: @Model.Price Rands</li>
    </ul>

    <h3>QR Code:</h3>
    <img src="@Model.QRCode" alt="QR Code" />

    <p>A new QR code has been sent to your email.</p>
</div>

@model CarPacking.Models.MaintenanceTask

@{
    ViewBag.Title = "Confirm Maintenance Completion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .confirm-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #fff3cd;
        border-radius: 8px;
        border: 1px solid #ffeeba;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .confirm-container h2 {
            text-align: center;
            color: #856404;
        }

        .confirm-container ul {
            list-style-type: none;
            padding: 0;
        }

        .confirm-container li {
            font-size: 18px;
            color: #856404;
            margin: 10px 0;
        }

    button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease-in-out;
        margin-right: 10px;
    }

        button:hover {
            background-color: #218838;
        }

    .btn-cancel {
        background-color: #dc3545;
    }

        .btn-cancel:hover {
            background-color: #c82333;
        }
</style>

<div class="confirm-container">
    <h2>Confirm Maintenance Completion</h2>

    <p>Confirm that the following task is completed:</p>

    <ul>
        <li>Equipment: @Model.EquipmentName</li>
        <li>Scheduled Date: @Model.ScheduledDate.ToString("dd-MM-yyyy")</li>
    </ul>

    @using (Html.BeginForm())
    {
        <button type="submit" name="isConfirmed" value="true">Confirm Completion</button>
        <button type="submit" name="isConfirmed" value="false" class="btn-cancel">Cancel</button>
    }
</div>

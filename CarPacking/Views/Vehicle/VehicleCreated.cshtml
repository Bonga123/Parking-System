<!-- File: Views/Vehicle/VehicleCreated.cshtml -->
@model CarPacking.Models.Vehicle

@{
    ViewBag.Title = "Vehicle Created";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .vehicle-created-container {
        max-width: 500px;
        margin: 50px auto;
        padding: 30px;
        background-color: #d4edda;
        border-radius: 8px;
        border: 1px solid #c3e6cb;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

        .vehicle-created-container h2 {
            color: #155724;
        }

        .vehicle-created-container p {
            font-size: 18px;
            color: #155724;
        }

        .vehicle-created-container ul {
            list-style-type: none;
            padding: 0;
            font-size: 18px;
            color: #155724;
        }

            .vehicle-created-container ul li {
                margin: 10px 0;
            }

        .vehicle-created-container img {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
            border-radius: 8px;
        }

        .vehicle-created-container button {
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

            .vehicle-created-container button:hover {
                background-color: #218838;
            }
</style>

<div class="vehicle-created-container">
    <h2>Vehicle Created Successfully</h2>
    <p>Your vehicle has been added to your account.</p>

    <ul>
        <li>License Plate: @Model.LicensePlate</li>
        <li>Make: @Model.Make</li>
        <li>Model: @Model.Model</li>
    </ul>

    @if (!string.IsNullOrEmpty(Model.PicturePath))
    {
        <img src="@Model.PicturePath" alt="Vehicle Picture" />
    }

    <button onclick="location.href='@Url.Action("Index", "Home")'">Go to Dashboard</button>
</div>

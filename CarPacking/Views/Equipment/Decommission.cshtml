@model List<CarPacking.Models.Equipment>

@{
    ViewBag.Title = "Decommission Equipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .decommission-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f0f4f7;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .decommission-container h2 {
            text-align: center;
            color: #343a40;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #dee2e6;
    }

    th {
        background-color: #dc3545;
        color: white;
    }

    td a {
        display: inline-block;
        padding: 8px 12px;
        background-color: #dc3545;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s ease-in-out;
    }

        td a:hover {
            background-color: #c82333;
        }
</style>

<div class="decommission-container">
    <h2>Decommission Equipment</h2>

    <table>
        <tr>
            <th>Equipment Name</th>
            <th>Action</th>
        </tr>
        @foreach (var equipment in Model)
        {
            <tr>
                <td>@equipment.Name</td>
                <td>
                    @Html.ActionLink("Decommission", "Decommission", new { equipmentId = equipment.EquipmentId })
                </td>
            </tr>
        }
    </table>
</div>
